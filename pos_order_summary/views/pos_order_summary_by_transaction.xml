<openerp>
    <data>
        <record id="pos_order_summary_by_transaction_view_tree" model="ir.ui.view">
            <field name="name">pos.order_summary_by_transaction Tree</field>
            <field name="model">pos.order_summary_by_transaction</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="date_order"/>
                    <field name="warehouse_id"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="price_unit"/>
                    <field name="discount"/>                        
                    <field name="qty"/>            
                    <field name="price_subtotal"/>
                </tree>
            </field>
        </record>

        <record id="pos_order_summary_by_transaction_view_search" model="ir.ui.view">
            <field name="name">pos.order_summary_by_transaction Search</field>
            <field name="model">pos.order_summary_by_transaction</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date_order"/>
                    <field name="warehouse_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <group string="Group By">
                        <filter name="grp_date_order" string="Date Order" context="{'group_by':'date_order:day'}"/>
                        <filter name="grp_warehouse_id" string="Warehouse" context="{'group_by':'warehouse_id'}"/>
                        <filter name="grp_name" string="Order Ref." context="{'group_by':'name'}"/>
                        <filter name="grp_product_id" string="Product" context="{'group_by':'product_id'}"/>
                        <filter name="grp_current_date" string="Current Date" domain="[('date_order', '=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pos_order_summary_by_transaction_view_action" model="ir.actions.act_window">
            <field name="name">By Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order_summary_by_transaction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="pos_order_summary_by_transaction_view_tree"/>
            <field name="search_view_id" ref="pos_order_summary_by_transaction_view_search"/>
            <field name="target">current</field>
            <field name="context">
                {
                    'search_default_grp_name':1,
                    'search_default_grp_date_order':1,
                    'search_default_grp_warehouse_id':1,
                    'search_default_grp_current_date':1
                }
            </field>
        </record>
    </data>
</openerp>
